class Solution {
  public:
    // Function to find the sum of contiguous subarray with maximum sum.
    int maxSubarraySum(vector<int> &arr) {
    int sum=0;
    int maxx=arr[0];
   
    for(int i=0;i<arr.size();i++){
        sum=sum+arr[i];
        maxx=max(maxx,sum);
        if (sum<0)
        sum=0;
    }
    return maxx;
    }
};
